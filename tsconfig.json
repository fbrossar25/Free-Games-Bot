{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./out/",
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": "./"
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/help.json"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}