{
    "name": "free-games-bot",
    "version": "2.0.1",
    "description": "Free games bot for discord",
    "main": "src/index.ts",
    "scripts": {
        "docker-run": "docker run --rm --name free-games-bot -it -v $(pwd)/conf:/opt/free-games-bot/conf:rw fbrossar25/free-games-bot:$npm_package_version",
        "docker-bash": "docker run --rm --name free-games-bot -it -v $(pwd)/conf:/opt/free-games-bot/conf:rw -exec fbrossar25/free-games-bot:$npm_package_version /bin/bash",
        "docker-build": "docker build -f Dockerfile.dev -t fbrossar25/free-games-bot:dev .",
        "docker-build-prod": "docker build -f Dockerfile -t fbrossar25/free-games-bot:latest -t fbrossar25/free-games-bot:$npm_package_version .",
        "docker-push": "docker push fbrossar25/free-games-bot:$npm_package_version && docker push fbrossar25/free-games-bot:latest",
        "start": "TZ=Europe/Paris CONF_DIR=$(pwd)/conf node $npm_package_main",
        "start:win": "powershell $env:TZ='Europe/Paris'; $env:CONF_DIR='$pwd\\conf'; node $env:npm_package_main",
        "dev:win": "powershell $env:TZ='Europe/Paris'; $env:CONF_DIR='$pwd\\conf'; nodemon --inspect=9229 $env:npm_package_main",
        "check-npm": "echo $npm_package_name V$npm_package_version : $npm_package_main",
        "check-npm:win": "powershell Write-Output \"${env:npm_package_name} V${env:npm_package_version}: ${env:npm_package_main}\"",
        "dev": "nodemon --inspect=9229 $npm_package_main",
        "test": "jest --config ./jest.config.json",
        "compile": "tsc",
        "build": "gulp clean build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fbrossar25/Free-Games-Bot.git"
    },
    "keywords": [
        "discord",
        "bot",
        "free",
        "games"
    ],
    "author": "Florian BROSSARD",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/fbrossar25/Free-Games-Bot/issues"
    },
    "homepage": "https://github.com/fbrossar25/Free-Games-Bot#readme",
    "dependencies": {
        "axios": "^0.27.2",
        "bufferutil": "^4.0.6",
        "catch-exit": "^1.2.2",
        "dayjs": "^1.11.5",
        "discord.js": "^14.3.0",
        "erlpack": "github:discord/erlpack",
        "node-schedule": "^1.3.3",
        "utf-8-validate": "^5.0.9",
        "zlib-sync": "^0.1.7"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.17.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.3",
        "@types/node": "^18.11.15",
        "@types/node-schedule": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "eslint": "^8.29.0",
        "gulp": "^4.0.2",
        "gulp-clean": "^0.4.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-typescript": "^5.0.1",
        "jest": "^29.0.3",
        "nodemon": "^2.0.20",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    }
}
